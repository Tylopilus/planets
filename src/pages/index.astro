---
	import { Stars } from '../components/Stars.tsx'
	let img;
---

<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="viewport" content="width=device-width" />
	<title>Welcome to Astro</title>
	<style>
		/* scoped CSS styles go here: */
		/* h1 { ... } */
	</style>
</head>

<body>


	<Stars client:idle >
		<!-- <div class='img1'></div> -->
		<section>
		<img class='img1' src='./images/stars.webp' alt='stars' />
		<img class='img2' src='./images/stars.webp' alt='stars' />
		</section>
	</Stars>

</body>

</html>

<style lang='scss'>
body{
	margin: 0;
}
section {
	overflow: hidden;
	height: 100vh;
	width: 100vw;
	position: relative;
}
	.img1 {
		width: 120%;
		height: 120%;
		object-fit: cover;
		position: absolute;
		top: -10%;
		left: -10%;
		transform: translate(calc(var(--offsetX) * .21%), calc(var(--offsetY) * .21%));
	}
	.img2 {
		opacity: .7;
		mix-blend-mode: multiply;
		width: 120%;
		height: 120%;
		object-fit: cover;
		position: absolute;
		top: -9%;
		left: -9%;
		transform: translate(calc(var(--offsetX) * -.35%), calc(var(--offsetY) * -.35%)) rotate(180deg) ;
	}
</style>
